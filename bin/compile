#!/usr/bin/env bash

function indent() {
	c='s/^/       /'
	case $(uname) in
		Darwin) sed -l "$c";;
		*)      sed -u "$c";;
	esac
}

env_dir=$3
ssh_key="$(cat $env_dir/SSH_KEY)"

if [ "$ssh_key" != "" ]; then
	echo "-----> Running SSH private key setup"

	mkdir "$HOME/.ssh"
	echo "$ssh_key" | base64 --decode > "$HOME/.ssh/id_rsa"
	ssh -oStrictHostKeyChecking=no -T git@git.substrakt.com 2>&1 | indent
	exit 0
else
	echo "-----> No SSH private key"
fi
